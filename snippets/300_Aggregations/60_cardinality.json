# Now the cardinality agg can use `color.hash` for a speed boost
GET /cars/transactions/_search
{
    "size" : 0,
    "aggs" : {
        "distinct_colors" : {
            "cardinality" : {
              "field" : "color.hash"
            }
        }
    }
}
